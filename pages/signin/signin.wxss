.wxIcon {
  width:150px;
  height:150px;
  margin:30px 0;
  border-radius:50%;
}
.nicknameToken {
  width:90%;
  background-color:#21bb20;
  color:#fff;
}
.nicknameToken_hover {
  background-color:#1b901b;
}
.inputWrapper {
  display: flex;
  justify-content: space-between;
	margin-top: 20px;
	font-size: 0px;
}
.inputWrapper .title {
	box-sizing: border-box;
	display: inline-block;
	padding-left: 1em;
	width: 35%;
	height: 24px;
	vertical-align: top;
	line-height: 24px;
	font-size: 16px;
}
.inputWrapper .input {
	display: inline-block;
  box-sizing: border-box;
  margin-right: 10px;
	padding-left: 4px;
	width: 60%;
	height: 24px;
	line-height: 24px;
	font-size: 16px;
	border: 1px solid #ddd;
	vertical-align: top;
}
.inputWrapper .icon {
  display: inline-block;
  box-sizing: border-box;
  width: 30%;
  border-left: 1px solid #ddd;
  font-size: 16px;
  vertical-align: top;
  text-align: center
}
.submitContainer {
  display: flex;
  justify-content: space-around;
  margin-top: 30px;
}
.submitContainer .submitBtn {
  padding: 0;
  margin: 0;
  width: 40%;
  background-color: #21bb20;
  color: #fff;
  text-align: center;
  line-height: 40px;
  border-radius: 4px;
}
.resultWrapper {
  position: absolute;
  top: 290px;
  bottom: 0px;
  left: 0;
  right: 0;
  padding-bottom: 50px;
  background-color:#fff;
  z-index: 100;
  overflow: scroll;
}
.plateNumberResult {
  top: 325px;
}
.companyResult {
  top: 200px;
}
.resultItem {
  margin-top: 20px;
  padding-left: 10px;
}
.resultItem .txt {
  display: inline-block;
  padding: 0 5px;
  line-height: 1.8em;
  color: #444;
  background-color: #ddd;
  border-radius: 4px;
}
.closeBtn {
  position: fixed;
  bottom: 0;
  height: 45px;
  line-height: 45px;
  width: 100%;
  text-align: center;
  background-color: #ddd;
  z-index: 101
}
.cancelBtn {
  padding: 0;
  margin: auto;
  margin-top: 50px;
  width: 40%;
  background-color: #fff;
  color: #444;
  text-align: center;
  line-height: 40px;
  border-radius: 4px;
}